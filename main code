void setup() {
  pinMode(8, OUTPUT); //Red LED Array
  pinMode(7, OUTPUT); //Green LED Array
  pinMode(2, OUTPUT); //Yellow LED Array

}

void loop() {
  // Sequence #1
  delay(1000);           // Delaay in miliseconds...TIMING IS EVERYTHING !!!
  digitalWrite(8, HIGH); //HIGH means on
  digitalWrite(7, HIGH); //LOW means off
  digitalWrite(2, HIGH);
  delay(2000);

  digitalWrite(2, LOW); 
  delay(300);
  digitalWrite(2, LOW);
  delya(300);




//Sequence #2



}
